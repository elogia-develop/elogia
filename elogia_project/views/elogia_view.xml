<odoo>
    <data>
        <!-- View form inherit project.task-->
        <record model="ir.ui.view" id="project_view_task_form2_inherited_elogia">
            <field name="name">project.view.task.form2.inherited.elogia</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="action_id" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}"/>
                </xpath>
            </field>
        </record>

        <!-- View tree inherit project.task-->
        <record model="ir.ui.view" id="project_view_task_tree2_inherited_elogia">
            <field name="name">project.view.task.tree2.inherited.elogia</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="sequence"/>
                </xpath>
                <xpath expr="//field[@name='user_ids']" position="after">
                    <field name="action_id" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}"/>
                </xpath>
            </field>
        </record>

        <!-- View kanban inherit project.task-->
        <record model="ir.ui.view" id="project_view_task_kanban_inherited_elogia">
            <field name="name">project.view.task.kanban.inherited.elogia</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <xpath expr="//strong[@class='o_kanban_record_title']" position="replace">
                    <strong class="o_kanban_record_title">
                        <s t-if="!record.active.raw_value">[<field name="sequence"/>] - <field name="name" widget="name_with_subtask_count"/></s>
                        <t t-else="">[<field name="sequence"/>] - <field name="name" widget="name_with_subtask_count"/></t>
                    </strong>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
