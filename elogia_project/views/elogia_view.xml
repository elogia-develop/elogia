<odoo>
    <data>
        <!-- View form inherit project.task-->
        <record model="ir.ui.view" id="project_view_task_form2_inherited_elogia">
            <field name="name">project.view.task.form2.inherited.elogia</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="action_user_id" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}"/>
                </xpath>
            </field>
        </record>

        <!-- View tree inherit project.task-->
        <record model="ir.ui.view" id="project_view_task_tree2_inherited_elogia">
            <field name="name">project.view.task.tree2.inherited.elogia</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="sequence"/>
                </xpath>
                <xpath expr="//field[@name='user_ids']" position="after">
                    <field name="action_user_id" options="{'no_open': True, 'no_quick_create': True, 'no_create': True}"/>
                </xpath>
            </field>
        </record>

        <!-- View kanban inherit project.task-->
        <record model="ir.ui.view" id="project_view_task_kanban_inherited_elogia">
            <field name="name">project.view.task.kanban.inherited.elogia</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <xpath expr="//strong[@class='o_kanban_record_title']" position="replace">
                    <strong class="o_kanban_record_title">
                        <s t-if="!record.active.raw_value">[<field name="sequence"/>] - <field name="name" widget="name_with_subtask_count"/></s>
                        <t t-else="">[<field name="sequence"/>] - <field name="name" widget="name_with_subtask_count"/></t>
                    </strong>
                </xpath>
            </field>
        </record>

        <record id="planning_action_my_roles" model="ir.actions.act_window">
            <field name="name">Hubs</field>
            <field name="res_model">planning.role</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hub found</p><p>
                    Define the different hubs by your employees.
                </p>
            </field>
        </record>

        <!-- View pivot inherit planning.slot-->
        <record id="planning_slot_report_view_elogia_pivot" model="ir.ui.view">
            <field name="name">planning.slot.report.elogia.pivot</field>
            <field name="inherit_id" ref="planning.planning_slot_report_view_pivot"/>
            <field name="model">planning.slot</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='allocated_hours']" position="before">
                    <field name="hours_available" type="measure"/>
                    <field name="total_hours" type="measure"/>
                </xpath>
            </field>
        </record>

        <!-- View form inherit planning.slot-->
        <record id="planning_slot_report_view_elogia_form" model="ir.ui.view">
            <field name="name">planning.slot.report.elogia.form</field>
            <field name="inherit_id" ref="planning.planning_view_form"/>
            <field name="model">planning.slot</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='project_id']" position="attributes">
                    <attribute name="required">True</attribute>
                </xpath>
            </field>
        </record>

        <menuitem
            id="planning.planning_menu_settings_role"
            name="Role/Hub"
            parent="planning.planning_menu_settings"
            sequence="20"
            action="planning_action_my_roles"
            groups="planning.group_planning_manager"/>

    </data>
</odoo>
