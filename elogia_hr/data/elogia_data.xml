    </record>
    <record id="employee_rol03" model="planning.role">
        <field name="name">Data</field>
    </record>
    <record id="employee_rol04" model="planning.role">
        <field name="name">Social Finanzas</field>
    </record>

    <record id="hr_contract_type00" model="hr.contract.type">
        <field name="name">Indefinido</field>
    </record>
    <record id="hr_contract_type01" model="hr.contract.type">
        <field name="name">Practicas</field>
    </record>
    <record id="hr_contract_type02" model="hr.contract.type">
        <field name="name">Eventual</field>
    </record>

    <record id="hr_payroll_structure_type00" model="hr.payroll.structure.type">
        <field name="name">Contrato</field>
    </record>
    <record id="hr_payroll_structure_type01" model="hr.payroll.structure.type">
        <field name="name">Beca</field>
    </record>
    <record id="hr_payroll_structure_type02" model="hr.payroll.structure.type">
        <field name="name">Freelance</field>
    </record>

    <record id="type_scholarship00" model="type.scholarship">
        <field name="name">FEUGA</field>
        <field name="description">Beca FEUGA</field>
    </record>
    <record id="type_scholarship01" model="type.scholarship">
        <field name="name">Salcines</field>
        <field name="description">Beca Salcines</field>
    </record>
    <record id="type_scholarship02" model="type.scholarship">
        <field name="name">Universidad</field>
        <field name="description">Beca Universidad</field>
    </record>
    <record id="type_scholarship03" model="type.scholarship">
        <field name="name">Escuela de Negocios</field>
        <field name="description">Beca Escuela de Negocios</field>
    </record>

    <record id="hr_departure_reason00" model="hr.departure.reason">
        <field name="name">Baja Voluntaria</field>
    </record>
    <record id="hr_departure_reason01" model="hr.departure.reason">
        <field name="name">Despido</field>
    </record>
    <record id="hr_departure_reason02" model="hr.departure.reason">
        <field name="name">Finalizacion contrato/beca</field>
    </record>
    <record id="hr_departure_reason03" model="hr.departure.reason">
        <field name="name">Cambio de empresa dentro del grupo</field>
    </record>

    <!-- Expired Soon -->
    <record id="ir_cron_data_contract_update_state" model="ir.cron">
        <field name="name">HR Contract Elogia: update state</field>
        <field name="model_id" ref="model_hr_contract"/>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="code">model.update_state()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>

    <!--Email template -->
    <record id="notification_email_contract_template" model="mail.template">
        <field name="name">HR Contract: Send Notification by Email</field>
        <field name="model_id" ref="elogia_hr.model_hr_contract"/>
        <field name="subject">Contract {{object.name}} is about to expire</field>
        <field name="body_html" type="xml">
            <div>
                Dear <t t-out="object.employee_id.parent_id.name or ''">Gerente</t>.<br/>
                The contract <t t-out="object.name or ''"># </t> with reference to the employee <t t-out="object.employee_id.name or ''">Employee </t> is about to expire.<br/><br/>
                Kind regards,<br/><br/>
                <t t-out="object.department_id.name or 'Department'"> Team</t>.
            </div>
        </field>
        <field name="lang">{{ object.employee_id.user_id.lang or user.lang }}</field>
        <field name="auto_delete" eval="False"/>
    </record>
</odoo>